<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边缘线的宽度和颜色 -->
    <stroke
        android:width="1px"
        android:color="@color/white_979797" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient
        android:centerColor="@color/white_eeeeee"
        android:endColor="@color/white_eeeeee"
        android:startColor="@color/white_eeeeee" />
    <!-- 设置四个角的角度 -->
    <corners
        android:radius="3dp" />
    <!-- 设置padding -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>