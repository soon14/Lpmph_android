<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <RelativeLayout
        android:id="@+id/ll_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_round_imageview"
        >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_img" />
    </RelativeLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_img"
            android:padding="10dp"
            android:singleLine="true"
            android:text="店铺名称只有这么多"
            android:textColor="@color/black"
            android:textSize="@dimen/small_textsize" />


        <TextView
            android:id="@+id/item_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_toRightOf="@+id/ll_img"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="销量：1234567"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/smaller_textsize" />

        <TextView
            android:id="@+id/item_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_sales"
            android:layout_toRightOf="@+id/ll_img"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="共计56789件商品"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/smaller_textsize" />


        <TextView
            android:id="@+id/to_store_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_store_search_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="进入店铺"
            android:textColor="@color/red_e61515"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cancle_collect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/to_store_tv"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="取消关注"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/small_textsize" />

    </RelativeLayout>


</LinearLayout>