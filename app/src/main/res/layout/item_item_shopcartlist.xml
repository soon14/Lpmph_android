    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/fl_num"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/attribute_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            >

            <TextView
                android:id="@+id/tv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一"
                android:textSize="@dimen/smaller_textsize"
                android:textColor="@color/black"
                android:layout_gravity="left|center_vertical"
                android:gravity="center"
                android:paddingLeft="8dp"
                />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="十"
                android:textSize="@dimen/smaller_textsize"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingRight="8dp"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_buyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥40.00"
            android:textSize="@dimen/smaller_textsize"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tv_totalbuyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计：￥0.00"
            android:textColor="@color/red"
            android:textSize="@dimen/body_textsize"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_totalminusPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立减0.00"
            android:textColor="@color/gray_969696"
            android:textSize="@dimen/smaller_textsize"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_totalbuyPrice"
            android:paddingTop="2dp"
            android:visibility="visible"
            />

    </RelativeLayout>

