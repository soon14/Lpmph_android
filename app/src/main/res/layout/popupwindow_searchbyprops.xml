<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人卫服务"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_textsize"
                        android:padding="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="手机专享"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_has_good"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="仅看有货"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_promotion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="促销"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格区间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_textsize"
                        android:padding="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_price1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0-89"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_price2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="90-199"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_price3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="200-299"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_price4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="300-399"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_price5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="400以上"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="200-299"
                            android:textColor="@color/gray_312B2D"
                            android:textSize="@dimen/smaller_textsize"
                            android:background="@drawable/shape_round_textview"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:visibility="invisible"
                            />

                    </LinearLayout>

                </LinearLayout>

                <com.ailk.pmph.ui.view.CustomListView
                    android:id="@+id/searchbyprops_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:visibility="gone"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:id="@+id/sort_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部分类"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_catg_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/orange_ff6a00"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/arrow_right_black"
                        android:drawablePadding="5dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    />

            </LinearLayout>

            <com.ailk.pmph.ui.view.CustomListView
                android:id="@+id/props_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:scrollbars="none"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ebebeb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重置"
            android:id="@+id/searchbyprops_reset"
            android:background="@drawable/btn_square_white_selector"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:id="@+id/searchbyprops_confirm"
            android:textColor="@color/white"
            android:background="@color/red"
            />

    </LinearLayout>

</LinearLayout>