<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/cb_checkitem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_round_imageview"
        >

        <ImageView
            android:id="@+id/iv_gds_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_img"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书本名称书本名称书本名称书本名称"
            android:textColor="@color/gray_312B2D"
            android:textSize="@dimen/small_textsize"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价内容评价内容评价内容评价内容评价内容评价内容评价内容"
            android:textColor="@color/gray_969696"
            android:textSize="@dimen/smaller_textsize"
            android:maxLines="3"
            android:maxEms="20"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价送积分"
            android:textColor="@color/gray_969696"
            android:textSize="@dimen/smaller_textsize"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_delbutton"
            android:text="去评价"
            android:textColor="@color/red"
            android:textSize="@dimen/small_textsize"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

    </LinearLayout>

</LinearLayout>