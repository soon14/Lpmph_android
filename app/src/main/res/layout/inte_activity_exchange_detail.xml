<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ebebeb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_e9573b"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换详情"
            android:textColor="@color/white"
            android:textSize="@dimen/home_textsize"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_gds_img"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/bg_score"
                    android:scaleType="fitXY"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/tv_gds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="原木家具"
                        android:textColor="@color/gray_312B2D"
                        android:textSize="@dimen/small_textsize"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_gds_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="X 1份"
                        android:textColor="@color/gray_969696"
                        android:textSize="@dimen/small_textsize"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="所需积分"
                        android:textColor="@color/gray_312B2D"
                        android:textSize="@dimen/small_textsize"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_gds_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3500积分 + ￥100.00"
                        android:textColor="@color/gray_969696"
                        android:textSize="@dimen/small_textsize"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="兑换时间"
                        android:textColor="@color/gray_312B2D"
                        android:textSize="@dimen/small_textsize"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_gds_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-01-01 00:00"
                        android:textColor="@color/gray_969696"
                        android:textSize="@dimen/small_textsize"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="物流信息"
                        android:textColor="@color/gray_312B2D"
                        android:textSize="@dimen/small_textsize"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_gds_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂未发货"
                        android:textColor="@color/gray_969696"
                        android:textSize="@dimen/small_textsize"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_ebebeb"
                    />

                <ListView
                    android:id="@+id/lv_logistics_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@color/gray_ebebeb"
                    android:dividerHeight="5dp"
                    >
                </ListView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>