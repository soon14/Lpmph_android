<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ailk.pmph.ui.view.MaskableImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/home_img_scale_type"
        android:id="@+id/img0"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_gds_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容内容内容内容内容内容内容内容"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            android:textColor="@color/gray_312B2D"
            android:textSize="@dimen/small_textsize"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_gds_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50积分"
                android:textColor="@color/red"
                android:textSize="@dimen/small_textsize"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换购"
                android:textColor="@color/yellow_ffa800"
                android:textSize="@dimen/smaller_textsize"
                android:padding="3dp"
                android:background="@drawable/shape_round_yellow_textview"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>