<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fbfbfb"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_ebebeb"
        />

    <RelativeLayout
        android:id="@+id/rl_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <CheckBox
            android:id="@+id/cb_checkstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/background_radio_button"
            />

        <ImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/store_home_tab_r"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_checkstore"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="人民卫生出版社1号店"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_shop_logo"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:maxEms="20"
            android:ellipsize="end"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_storeName"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ebebeb"
        />

    <RelativeLayout
        android:id="@+id/prom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:id="@+id/ll_prom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_round_textview"
            android:padding="5dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_nameShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满减"
                android:textColor="@color/red"
                android:textSize="@dimen/smaller_textsize"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_promTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="活动商品满50.00元，可减20.00元活动商品满50.00元，可减20.00元"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/smaller_textsize"
                android:gravity="center|left"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_toRightOf="@id/tv_promTheme"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>