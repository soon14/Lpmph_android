<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_goodlist_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@drawable/arrow_left_black" />

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/title_goodlist_back"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/title_layout_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_round_dp3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_good_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="商品"
                android:textColor="@color/black_333333"
                android:textSize="14sp"
                android:drawableRight="@drawable/icon_arrow_down"
                />

            <EditText
                android:id="@+id/title_goodlist_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="@color/black"
                android:textSize="@dimen/smaller_textsize" />

            <ImageView
                android:id="@+id/title_goodlist_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/round_close"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/title_goodlist_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <!-- 右部分 End-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_dddddd"/>

</LinearLayout>