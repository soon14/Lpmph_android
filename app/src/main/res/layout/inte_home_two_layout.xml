<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="horizontal"
    android:background="@drawable/shape_round_textview">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.ailk.pmph.ui.view.MaskableImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                style="@style/home_img_scale_type"
                android:id="@+id/img0"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/default_img"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_gds_name0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容内容内容内容内容内容内容内容"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                android:textColor="@color/gray_312B2D"
                android:textSize="@dimen/small_textsize"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_gds_score0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50积分"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_textsize"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换购"
                    android:textColor="@color/yellow_ffa800"
                    android:textSize="@dimen/smaller_textsize"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="@drawable/shape_round_yellow_textview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_ebebeb"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.ailk.pmph.ui.view.MaskableImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                style="@style/home_img_scale_type"
                android:id="@+id/img1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/default_img"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:layout_below="@+id/img1">

            <TextView
                android:id="@+id/tv_gds_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容内容内容内容内容内容内容内容"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                android:textColor="@color/gray_312B2D"
                android:textSize="@dimen/small_textsize"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_gds_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50积分"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_textsize"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换购"
                    android:textColor="@color/yellow_ffa800"
                    android:textSize="@dimen/smaller_textsize"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="@drawable/shape_round_yellow_textview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>