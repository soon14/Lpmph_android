<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <CheckBox
            android:id="@+id/cb_checkitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radio_button"
            android:layout_centerVertical="true"
            android:button="@null"
            />

        <RelativeLayout
            android:id="@+id/ll_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/cb_checkitem"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_round_imageview"
            >

            <ImageView
                android:id="@+id/iv_itemimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_avtar"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_img"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_goodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全国护士执业资格考试指导书名书名书名"
                android:textColor="@color/black"
                android:textSize="@dimen/small_textsize"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_buyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥40.00"
                    android:textSize="@dimen/small_textsize"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textsize"
                    android:text="删除"
                    android:textColor="@color/red_ea563d"
                    android:background="@drawable/shape_round_delbutton"
                    android:layout_alignParentRight="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <FrameLayout
                    android:id="@+id/fl_num"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/attribute_bg"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text="一"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textSize="@dimen/body_textsize"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="十"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/black"
                        android:gravity="center"
                        />

                </FrameLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_num"
                android:text="￥40.00"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/red"
                android:visibility="gone"
                />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_totalbuyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计：￥0.00"
            android:textColor="@color/red"
            android:textSize="@dimen/small_textsize"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>