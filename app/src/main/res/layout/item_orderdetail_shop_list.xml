<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/cb_checkitem"
            android:background="@drawable/shape_round_imageview"
            >

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_avtar"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxEms="15"
                android:ellipsize="end"
                android:text="商品名称商品名称商品名称商品名称商品名称商品名称"
                android:textColor="@color/gray_312B2D"
                android:textSize="@dimen/small_textsize"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="价格：￥88.00"
                    android:textColor="@color/gray_969696"
                    android:textSize="@dimen/small_textsize"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/tv_product_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量：X 1"
                    android:textColor="@color/gray_969696"
                    android:textSize="@dimen/small_textsize"
                    android:padding="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>