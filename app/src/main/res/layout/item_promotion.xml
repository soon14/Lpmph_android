<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/item_promotion_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="满减"
            android:textSize="@dimen/smaller_textsize"
            android:background="@drawable/shape_rectangle_red_stroke"
            android:textColor="@color/red_ea563c"
            />

        <TextView
            android:id="@+id/item_promotion_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="满减满减满减满减满减满减满减满减满减满减满减满减满减满减"
            android:textSize="@dimen/smaller_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxEms="15"
            android:maxLines="2"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            />
    </LinearLayout>



</LinearLayout>