<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/default_img"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/item_img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_gds_type_digital"
                    android:padding="10dp"
                    android:visibility="gone"
                    />

            </FrameLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_name"
                    android:text="商品名称"
                    android:textSize="@dimen/small_textsize"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_gds_desc"
                    android:layout_marginTop="10dp"
                    android:text="内容介绍"
                    android:textColor="@color/gray_969696"
                    android:textSize="@dimen/smaller_textsize"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_author"
                    android:layout_marginTop="10dp"
                    android:text="作者：姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/smaller_textsize"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_des1"
                android:text="包邮"
                android:padding="3dp"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_des2"
                android:text="浏览过的书"
                android:textColor="@color/white"
                android:background="@color/red_ea563c"
                android:padding="3dp"
                android:visibility="invisible"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0.01"
                    android:textSize="@dimen/smaller_textsize"
                    android:textColor="@color/red"
                    />
                <ImageView
                    android:id="@+id/iv_phone_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_phone_price"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_price"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_search_collect"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/tv_has"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:textSize="@dimen/smaller_textsize"
                    android:textColor="@color/color_999999"
                    android:paddingTop="5dp"
                    android:gravity="right"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ebebeb"/>

</LinearLayout>