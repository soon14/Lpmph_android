<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_confirm_user"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我叫天天啊啊啊啊啊"
                    android:textColor="@color/gray_312B2D"
                    android:textSize="@dimen/small_textsize"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/red"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="@color/gray_312B2D"
                    android:textSize="@dimen/small_textsize"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_confirm_location"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市朝阳区什么什么什么什么什么什么什么什么什么"
                    android:textColor="@color/gray_312B2D"
                    android:textSize="@dimen/small_textsize"
                    android:maxEms="20"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="10dp"
                    android:background="@null"
                    android:enabled="false"
                    android:cursorVisible="false"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ebebeb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_check_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radio_button"
            android:button="@null"
            />

        <TextView
            android:id="@+id/tv_default_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/gray_312B2D"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/gray_312B2D"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/icon_address_edit"
            />

        <TextView
            android:id="@+id/tv_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/gray_312B2D"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/icon_address_del"
            />

    </LinearLayout>

</LinearLayout>