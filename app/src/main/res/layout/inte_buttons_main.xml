<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/menu_bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:paddingTop="8dp"
              android:paddingBottom="5dp"
              android:orientation="horizontal"
              android:background="@color/gray_f7f7f7"
    >

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_menu_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_menu_0_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分首页"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/bt_menu_0_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_menu_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_menu_1_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分分类"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/bt_menu_1_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_menu_2_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换排行榜"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/bt_menu_2_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_menu_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/bt_menu_3_select"/>

            <FrameLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tips_circle"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textSize="@dimen/smallist_textsize"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    />
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分购物车"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/bt_menu_3_text"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_personal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_menu_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_menu_4_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员中心"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/bt_menu_4_text"
            />
    </LinearLayout>
</LinearLayout>